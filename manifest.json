{
	"manifest_version": 2,
	"name": "Todoist Mod",
	"description": "A Plugin to add some functionality to todoist.com web application",
	"version": "0.1.1",

	"permissions": [
		"https://todoist.com/",
		"http://todoist.com/"
	],
	"options_page": "options.html",
	"content_scripts" : [
		{
			"matches": ["*://todoist.com/*"],
			"js": ["jquery-2.1.1.min.js", "main.js"],
			"css": ["main.css"]
		}
	],
	"background" : {
		"scripts": ["background.js"]
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
